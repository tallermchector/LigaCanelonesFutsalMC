
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Team {
  id      Int      @id @default(autoincrement())
  name    String
  logoUrl String?
  players Player[]

  homeMatches Match[] @relation("TeamA")
  awayMatches Match[] @relation("TeamB")
}

model Player {
  id       Int    @id @default(autoincedit())
  name     String
  number   Int
  position String
  teamId   Int
  team     Team   @relation(fields: [teamId], references: [id])
}

model Match {
  id            String      @id
  scheduledTime DateTime
  status        String
  teamAId       Int
  teamBId       Int
  scoreA        Int
  scoreB        Int
  foulsA        Int
  foulsB        Int
  timeoutsA     Int
  timeoutsB     Int
  period        Int
  time          Int
  isRunning     Boolean
  teamA         Team        @relation("TeamA", fields: [teamAId], references: [id])
  teamB         Team        @relation("TeamB", fields: [teamBId], references: [id])
  events        GameEvent[]

  activePlayersA Int[]
  activePlayersB Int[]
}

model GameEvent {
  id           String  @id @default(cuid())
  type         String
  teamId       String
  playerId     Int
  playerName   String
  playerInId   Int?
  playerInName String?
  teamName     String
  timestamp    Int
  matchId      String
  match        Match   @relation(fields: [matchId], references: [id])
}
